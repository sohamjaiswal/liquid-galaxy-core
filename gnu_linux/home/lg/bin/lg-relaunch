##### lg-relaunch
# Works with legacy (lxdm/lightdm) or current (gdm3) display manager.

. ${HOME}/etc/shell.conf

usage="Usage: ${0##*/} -h[elp] [-f frame]"

while getopts :hf: opt; do
  case $opt in
    h)
      echo $usage >&2
      exit 0
      ;;
    f)
      frame=$OPTARG;;
    \?)
      echo "Invalid argument: -${OPTARG}" >&2
      echo $usage >&2
      exit 1
      ;;
    :)
      echo "Option -$OPTARG requires an argument" >&2
      echo $usage >&2
      exit 1
      ;;
  esac
done

RELAUNCH_CMD="\
if [ -f /etc/gdm3/greeter.dconf-defaults ]; then
  export SERVICE=gdm3
elif [ -f /etc/init/lxdm.conf ]; then
  export SERVICE=lxdm
elif [ -f /etc/init/lightdm.conf ]; then
  export SERVICE=lightdm
else
  exit 1
fi
if [[ \$(service \$SERVICE status) =~ 'stop' ]]; then
  service \${SERVICE} start
else
  service \${SERVICE} restart
fi
"

if test "$frame"; then
  echo "${frame}:"
  ssh -x root@$frame "$RELAUNCH_CMD"
else
  ${HOME}/bin/lg-sudo-bg "$RELAUNCH_CMD"
fi

